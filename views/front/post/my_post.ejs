<%- include ../layouts/header.ejs %>
<%- include ../functions.ejs %>
<section class="box-section">
<div class="container">
  	<div class"row">
    	<div class="col-lg-3">

       <%- include ../user/sidebar.ejs %>
    
    	</div>
		<div class="col-lg-8">
			<div class="box-from">
				<div class="row">
				    <div class="col-lg-12">
				    <span class="heading">
				    My Posts </span>
				</div>
			</div>
			<div class="row">

				<table class="table table-hover">
            <thead>
                <tr>
                   <th> Title  </th>
                   <th> Description </th>
                   <th>Action </th>
                </tr>
            </thead>
            <tbody>
            <% 
            if(data.length){
              data.forEach(function(value){ %>

                <tr>
                <td><%= value.title  %></td>
                <td><%= value.description %></td>
                <td><a href="<%= site_url('post/details/'+value._id) %>" class="btn btn-success btn-sm">Details </a></td>
                <tr>
                <% }) 
              }else{
              %>
              <tr>
                <td class="text-center" colspan="12">No Records Found</td>
                </tr>
              <% } %>
            </tbody>
    </table>
			        
			</div>
		</div>
	</div>
</div>
</section>
<%- include ../layouts/footer.ejs %>