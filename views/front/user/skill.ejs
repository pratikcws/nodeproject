var str = "<%= (skilldata) ? skilldata.good_at : "" %>";
var arr = str.split(",");

var str = "<%= (skilldata) ? skilldata.get_around : "" %>";
var get_around = str.split(",");


$("select").select2({
	tags: true,
    tokenSeparators: [',', arr]
})
