<%- include ../layouts/header.ejs %>
<%- include ../functions.ejs %>

<section class="box-section">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
            <h3> <%= postdata.title %></h3>
            <p><%= postdata.description %></p>

                <h2>$
                    <% var total= (servicechrge.taskerfee / 100) * offer.offer_amount;
                        var ftotal = parseInt(offer.offer_amount) + parseInt(total) %>
                    <%= ftotal %>
                </h2>

                <form action="<%= site_url('paynow') %>" method="post">
                    <input type="hidden" name="post_id" value="<%= postdata._id %>">
                    <input type="hidden" name="total_amount" value="<%= ftotal %>">
                    <button type="submit" class="btn btn-info"> Pay Now </button>
                </form>
                    Note: Expertie Service Charge included
            </div>
        </div>
    </div>
</section>

