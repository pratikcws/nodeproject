<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <div class="pull-left">
                            <h3 class="box-title">Post List</h3>
                        </div>
                        <div class="pull-right">
                            <a href="#" class="btn btn-default back_to_history"> <span class="fa fa-arrow-left"> Go Back</a>
                            <a href="" class="btn btn-default refreshlist"> <span class="fa fa-refresh"></a>
                            <!-- <a href="" class="btn btn-info addPost"> <span class="fa fa-plus"> Add New </a> -->
                        </div>
                    </div>
                    <div class="box-body">
                   <table id="example" class="display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="" >Sr. No.</th> 
                                    <th class="" >Post title</th>
                                   <th class="" >Post Description</th>
                                   <th class="" > Action </th>
                                </tr>
                            </thead>
        
					</table>
                    </div>

                </div>
            </div>
        </div>

    </section>
</div>


<div class="modal fade" id="postModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Add/Edit Post </h4>
            </div>
            <form role="form" id="postFrm" name="postFrm">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title"> Post title </label>
                        <input type="text" class="form-control" id="title"  name="title" placeholder="Enter Post Title..">
                    </div>
                    

                    <div class="form-group">
                        <label for="description"> Post Description </label>
                        <textarea class="form-control" id="description"  name="description" placeholder="Enter Description.." ></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-success submtBtn" id="submtBtn" value="Submit"> 
                </div>
            </form>
        </div>

    </div>
</div>



<div class="modal fade" id="descModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Post Details </h4>
            </div>
                <div class="modal-body">
                    <div class="post_desc_con">
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>




